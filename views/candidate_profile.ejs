
<!DOCTYPE html>
<html>
<head>
  <title>My Profile</title>
  <link rel="stylesheet" href="/public/styles.css">
</head>
<body>
  <header>
    <h1>Candidate Profile</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/candidate/documents">My Documents</a>
      <a href="/logout">Logout</a>
    </nav>
  </header>
  <main>
    <% if (success && success.length) { %>
      <div class="flash success"><%= success[0] %></div>
    <% } %>
    <% if (error && error.length) { %>
      <div class="flash error"><%= error[0] %></div>
    <% } %>

    <section class="panel">
      <h2>Verification Status</h2>
      <p>Status: <strong><%= profile.verification_status %></strong></p>
      <p>Level: <strong><%= profile.verification_level %></strong></p>
      <p>Risk score: <strong><%= profile.risk_score %></strong></p>
      <% if (profile.admin_notes) { %>
        <p>Admin notes: <em><%= profile.admin_notes %></em></p>
      <% } %>
    </section>

    <section>
      <h2>Edit Profile</h2>
      <form method="POST" action="/candidate/profile" class="form">
        <label>Full name
          <input type="text" name="full_name" value="<%= profile.full_name || '' %>">
        </label>
        <label>Date of birth
          <input type="date" name="dob" value="<%= profile.dob || '' %>">
        </label>
        <label>Phone
          <input type="text" name="phone" value="<%= profile.phone || '' %>">
        </label>
        <label>Location (City, State)
          <input type="text" name="location" value="<%= profile.location || '' %>">
        </label>
        <label>Headline
          <input type="text" name="headline" value="<%= profile.headline || '' %>">
        </label>
        <label>Total experience (years)
          <input type="number" step="0.1" name="total_experience_years" value="<%= profile.total_experience_years || '' %>">
        </label>
        <label>Primary skills (comma separated)
          <input type="text" name="primary_skills" value="<%= profile.primary_skills || '' %>">
        </label>
        <label>LinkedIn URL
          <input type="url" name="linkedin_url" value="<%= profile.linkedin_url || '' %>">
        </label>
        <label>GitHub URL
          <input type="url" name="github_url" value="<%= profile.github_url || '' %>">
        </label>
        <button type="submit">Save Profile</button>
      </form>
    </section>
  </main>
</body>
</html>
